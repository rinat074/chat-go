# Общие настройки
LOG_LEVEL=info
ENVIRONMENT=development

# База данных
DATABASE_URL=postgres://postgres:postgres@postgres:5432/chatapp
DATABASE_MAX_CONNECTIONS=20
DATABASE_MAX_IDLE_CONNECTIONS=10
DATABASE_CONNECTION_MAX_LIFETIME=1h

# Redis
REDIS_URL=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=24h

# gRPC
AUTH_SERVICE_ADDRESS=auth-service:50051
CHAT_SERVICE_ADDRESS=chat-service:50052

# HTTP
HTTP_SERVER_ADDRESS=:8080
HTTP_SERVER_TIMEOUT=30s
HTTP_SERVER_READ_TIMEOUT=15s
HTTP_SERVER_WRITE_TIMEOUT=15s
HTTP_SERVER_IDLE_TIMEOUT=60s

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_EXPOSED_HEADERS=Content-Length,Content-Type
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=12h

# Prometheus
METRICS_PORT=9100 